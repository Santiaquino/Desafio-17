<nav class="navBar">
    <p class="message">Bienvenido/a {{user.name}} [{{user.role}}]</p>
    <h1> Productos</h1>
    <button class="logout"><a href="/login">Logout</a></button>
</nav>
<div class="containerProducts">
    {{#each products}}
    <div class="card" style="width: 18rem;">
        <img src="/img/{{this.title}}.png" class="card-img-top" alt="Imagen de la notebook de la marca {{this.title}}">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text"> <strong>description:</strong> {{description}} <br> <strong>code:</strong> {{code}}<br>
                <strong>price:</strong> {{price}}<br>
                <strong>status:</strong> {{status}}<br> <strong>stock:</strong> {{stock}}<br> <strong>category:</strong>
                {{category}}
            </p>
            <button class="btn btn-primary" onclick={sentProduct('{{_id}}')}>Agregar</button>
        </div>
    </div>
    {{/each}}

    {{#if hasPrevPage}}
    <a href="?query={{query}}&page={{prevPage}}&limit={{limit}}&sort={{sort}}"><button
            class="buttonPage">Anterior</button></a>
    {{/if}}

    {{#if hasNextPage}}
    <a href="?query={{query}}&page={{nextPage}}&limit={{limit}}&sort={{sort}}"><button
            class="buttonPage">Siguiente</button></a>
    {{/if}}
</div>

<script src="/js/products.js"></script>
